input "type:keyboard" {
    xkb_layout gb(colemak_dh),gb
    xkb_options grp:win_space_toggle,caps:ctrl_shifted_capslock
}

input "type:pointer" {
    accel_profile flat
}

input "type:touchpad" {
    natural_scroll enabled 
    accel_profile flat
    pointer_accel 0.6
    scroll_factor 0.5
    tap_button_map lrm
    drag_lock disabled
    dwt enabled 
    tap enabled 
}
