input "type:keyboard" {
    xkb_layout gb(colemak_dh),gb
    xkb_options caps:ctrl_shifted_capslock,altwin:swap_lalt_lwin
}

input "type:pointer" {
    accel_profile flat
}

input "type:touchpad" {
    natural_scroll enabled 
    accel_profile flat
    pointer_accel 0.35
    scroll_factor 0.5
    tap_button_map lrm
    drag_lock disabled
    dwt enabled 
    tap enabled 
}
