set $mod Mod4
set $term exec sh -c 'alacritty msg create-window || alacritty'
set $filemanager nautilus
set $menu rofi -show drun

bindsym --to-code Control+Shift+Alt+l exec fcitx5-remote -t

bindsym --to-code $mod+Shift+w focus mode_toggle

bindsym --to-code $mod+h exec hyprpicker -r --autocopy
bindsym --to-code $mod+k exec swaync-client -t
bindsym --to-code $mod+l exec hyprlock --config $HOME/.config/sway/hyprlock.conf
bindsym --to-code $mod+ctrl+shift+l exec fcitx5-remote -t

bindsym --to-code $mod+Shift+c reload

bindsym --to-code $mod+F2 exec $HOME/.config/sway/extra/scripts/dwt.sh

bindsym --to-code $mod+Shift+r exec $HOME/.local/bin/screenshot --region
bindsym --to-code $mod+Print exec $HOME/.local/bin/screenshot --all
bindsym --to-code Print exec $HOME/.local/bin/screenshot --display

bindsym --to-code --locked XF86MonBrightnessDown exec brightnessctl set 5%- -s
bindsym --to-code --locked XF86MonBrightnessUp exec brightnessctl set 5%+ -s

bindsym --to-code --locked XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ -l 1
bindsym --to-code --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- 
bindsym --to-code --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

bindsym --to-code $mod+t exec $term
bindsym --to-code $mod+s exec $menu
bindsym --to-code $mod+f fullscreen
bindsym --to-code $mod+q kill
bindsym --to-code $mod+w floating toggle
bindsym --to-code $mod+ctrl+space input type:keyboard xkb_switch_layout next

bindsym --to-code $mod+Shift+minus move scratchpad
bindsym --to-code $mod+minus scratchpad show

floating_modifier $mod normal

bindsym --to-code $mod+b splith
bindsym --to-code $mod+v splitv

bindsym --to-code $mod+Left focus left
bindsym --to-code $mod+Down focus down
bindsym --to-code $mod+Up focus up
bindsym --to-code $mod+Right focus right

bindsym --to-code $mod+Shift+Left move left
bindsym --to-code $mod+Shift+Down move down
bindsym --to-code $mod+Shift+Up move up
bindsym --to-code $mod+Shift+Right move right

bindsym --to-code $mod+n focus left
bindsym --to-code $mod+e focus down
bindsym --to-code $mod+i focus up
bindsym --to-code $mod+o focus right

bindsym --to-code $mod+Shift+n move left
bindsym --to-code $mod+Shift+e move down
bindsym --to-code $mod+Shift+i move up
bindsym --to-code $mod+Shift+o move right

bindsym --to-code $mod+1 workspace number 1
bindsym --to-code $mod+2 workspace number 2
bindsym --to-code $mod+3 workspace number 3
bindsym --to-code $mod+4 workspace number 4
bindsym --to-code $mod+5 workspace number 5
bindsym --to-code $mod+6 workspace number 6
bindsym --to-code $mod+7 workspace number 7
bindsym --to-code $mod+8 workspace number 8
bindsym --to-code $mod+9 workspace number 9
bindsym --to-code $mod+0 workspace number 10

bindsym --to-code $mod+Shift+1 move container to workspace number 1
bindsym --to-code $mod+Shift+2 move container to workspace number 2
bindsym --to-code $mod+Shift+3 move container to workspace number 3
bindsym --to-code $mod+Shift+4 move container to workspace number 4
bindsym --to-code $mod+Shift+5 move container to workspace number 5
bindsym --to-code $mod+Shift+6 move container to workspace number 6
bindsym --to-code $mod+Shift+7 move container to workspace number 7
bindsym --to-code $mod+Shift+8 move container to workspace number 8
bindsym --to-code $mod+Shift+9 move container to workspace number 9
bindsym --to-code $mod+Shift+0 move container to workspace number 10

bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
