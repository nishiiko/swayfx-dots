#!/usr/bin/env sh

wm_test () {
  if [ "$XDG_CURRENT_DESKTOP" = "sway" ]; then
    swaymsg no_focus [title="^3eGiiqb6Ew.gif - mpv$"]
    swaymsg for_window [title="^3eGiiqb6Ew.gif - mpv$"] sticky enable 
    swaymsg for_window [title="^3eGiiqb6Ew.gif - mpv$"] blur disable
    swaymsg for_window [title="^3eGiiqb6Ew.gif - mpv$"] border none
    swaymsg for_window [title="^3eGiiqb6Ew.gif - mpv$"] shadows disable
    pkill --uid $(id --user) bash
  elif [ "$XDG_CURRENT_DESKTOP" = "niri" ]; then
    continue
  fi
}

main () {
  mpv --input-cursor=no \
      --input-vo-keyboard=no \
      --input-default-bindings=no \
      --input-builtin-bindings=no \
      --osc=no \
      --background=none \
      --keep-open=yes \
      --geometry=355x490 \
      /opt/explode/3eGiiqb6Ew.gif \
      --audio-file=/opt/explode/deltarune-explosion.mp3 & &>/dev/null
  sleep 1.6s
  loginctl poweroff
  sleep 5s
}

if [ $(id -u) = 0 ]; then
  exit 1
fi

main
